{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "noEmit": false,
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "types": ["bun"],
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules", "dist", "tests"]
}