{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build:client": "bun build ./src/client/index.html --outdir=dist/public --sourcemap --target=browser --minify --env='BUN_PUBLIC_*'",
    "build:server": "bun build src/index.ts --outfile api/index.js --minify --sourcemap=none --target bun",
    "build": "bun run build:client && bun run build:server",
    "start": "bun api/index.js"
  },
  "dependencies": {
    "hono": "^4.11.3",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5.9.3"
  }
}
