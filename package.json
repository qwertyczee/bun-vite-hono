{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun --hot src/dev.ts",
    "build:client": "bun build ./src/client/index.html --outdir=dist/public --target=browser --minify --splitting --env='BUN_PUBLIC_*'",
    "build:server": "bun build src/prod.ts --outfile=api/index.js --target=bun --minify --packages=external --define DEBUG='false'",
    "build": "bun run build:client && bun run build:server",
    "start": "NODE_ENV=production bun api/index.js"
  },
  "dependencies": {
    "hono": "^4.11.3",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5.9.3"
  }
}
